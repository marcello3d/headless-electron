{
  "name": "headless-electron",
  "version": "0.3.0",
  "description": "Easiest way to run jest unit test cases in electron.",
  "main": "lib/index.js",
  "files": [
    "lib",
    "runner.js",
    "environment.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "test-live": "DEBUG_MODE=1 jest",
    "test": "jest",
    "cp": "copyfiles -u 1 src/electron/**/*.{html,js,css} lib",
    "build": "rimraf lib && tsc && npm run cp",
    "watch": "npm run build && tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "electron": ">= 16"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/react": "^18.0.15",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "copyfiles": "^2.1.1",
    "electron": "^19.0.8",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "fs-extra": "^10.0.0",
    "husky": "4.3.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.tsx?$"
  },
  "keywords": [
    "headless",
    "electron"
  ],
  "authors": [
    "hustcc",
    "Marcello Bastea-Forte <marcello@cellosoft.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcello3d/headless-electron.git"
  }
}
