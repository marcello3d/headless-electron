{
  "name": "headless-electron",
  "version": "0.4.1",
  "description": "Easiest way to run jest unit test cases in electron.",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx pretty-quick --staged"
  },
  "scripts": {
    "test-live": "DEBUG_MODE=1 jest",
    "test": "jest",
    "cp": "copyfiles -u 1 src/electron/**/*.{html,js,css} lib",
    "build": "rimraf lib && tsc && npm run cp",
    "watch": "npm run build && tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "electron": ">= 16"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "copyfiles": "^2.1.1",
    "electron": "^20.1.3",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "fs-extra": "^10.0.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.0",
    "simple-git-hooks": "^2.8.0",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "^4.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.tsx?$"
  },
  "keywords": [
    "headless",
    "electron"
  ],
  "authors": [
    "hustcc",
    "Marcello Bastea-Forte <marcello@cellosoft.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcello3d/headless-electron.git"
  }
}
